<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/record_show_activity_trace_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/detail_map"
    android:layout_alignLeft="@+id/detail_map"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/record_show_activity_origin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="原始轨迹" />

        <View
            android:layout_width="15dp"
            android:layout_height="5dp"
            android:layout_gravity="center_vertical"
            android:background="#00EE00"
            android:paddingLeft="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/record_show_activity_kalman_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="平滑轨迹" />

        <View
            android:layout_width="15dp"
            android:layout_height="5dp"
            android:layout_gravity="center_vertical"
            android:background="#FFC125"
            android:paddingLeft="15dp" />
    </LinearLayout>
</LinearLayout>